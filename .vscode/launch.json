{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": True,
            "justMyCode": True,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/core"
            },

            "cwd": "${workspaceFolder}"
        }
    ]
}